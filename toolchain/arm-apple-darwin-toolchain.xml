<xml>

<echo value="Using cross-ios SDK ${IPHONE_VER}" if="VERBOSE"/>
<set name="HXCPP_ARM64" if="HXCPP_M64" />

<set name="ARCH" value ="-v7" if="HXCPP_ARMV7" />
<set name="ARCH" value ="-v7s" if="HXCPP_ARMV7S" />
<set name="ARCH" value ="-64" if="HXCPP_ARM64" />

<set name="HXCPP_USE_LIBTOOL" value="1" />

<section if="mac">
	<set name="MAC_GCC" value="1" if="HXCPP_GCC" />
	<path name="${DEVELOPER_DIR}/Platforms/iPhoneOS.platform/Developer/usr/bin" />
	<set name="SDK_ROOT" value="${DEVELOPER_DIR}/Platforms/iPhoneOS.platform/Developer/SDKs/iPhoneOS${IPHONE_VER}.sdk" />
</section>
<section unless="mac">
	<set name="CXX" value="haxelib run cross-ios --sdk iphoneos${IPHONE_VER} run g++" if="HXCPP_GCC" />
	<set name="CXX" value="haxelib run cross-ios --sdk iphoneos${IPHONE_VER} run clang++" unless="HXCPP_GCC" />
	<set name="CC" value="haxelib run cross-ios --sdk iphoneos${IPHONE_VER} run gcc" if="HXCPP_GCC" />
	<set name="CC" value="haxelib run cross-ios --sdk iphoneos${IPHONE_VER} run clang" unless="HXCPP_GCC" />

	<set name="HXCPP_STRIP" value="haxelib run cross-ios --sdk iphoneos${IPHONE_VER} run strip" unless="HXCPP_STRIP" />
	<set name="HXCPP_AR" value="haxelib run cross-ios --sdk iphoneos${IPHONE_VER} run ar" unless="HXCPP_AR" />
	<set name="HXCPP_RANLIB" value="haxelib run cross-ios --sdk iphoneos${IPHONE_VER} run ranlib" unless="HXCPP_RANLIB" />
</section>

<include name="toolchain/gcc-toolchain.xml"/>

<set name="OBJGCC" value="-c11" if="HXCPP_CPP11" />
<set name="OBJGCC" value="-gcc" if="MAC_GCC" />
<set name="OBJDBG" value="-dbg" if="debug" />

<compiler id="iPhoneOS" exe="g++" >
  <exe name="${CXX}" if="CXX" />
  <exe name="xcrun --sdk iphoneos${IPHONE_VER} g++" if="MAC_GCC" />
  <exe name="xcrun --sdk iphoneos${IPHONE_VER} clang++" if="mac" />
  <flag value="-c"/>
  <!-- Removed for iOS 8 -->
  <!-- <cppflag value="-fvisibility-inlines-hidden"/> -->
  <pchflag value="-x" />
  <pchflag value="c++-header" />
  <flag value="-stdlib=libstdc++" if="FORCE_LIBGCC" />
  <flag value="-stdlib=libc++" if="HXCPP_CPP11" />
  <flag value="-g" if="debug"/>
  <flag value="-O2" unless="debug"/>
  <flag value="-arch"/>
  <flag value="armv6" if="HXCPP_ARMV6" />
  <flag value="armv7" if="HXCPP_ARMV7" />
  <flag value="armv7s" if="HXCPP_ARMV7S" />
  <flag value="arm64" if="HXCPP_ARM64" />
  <flag value="-isysroot" if="mac"/>
	<flag value="${SDK_ROOT}" if="mac"/>
  <!-- <flag value="-miphoneos-version-min=3.0" if="HXCPP_GCC" unless="HXCPP_ARMV7" />
  <flag value="-miphoneos-version-min=5.0" if="HXCPP_ARMV7" /> -->
  <flag value="-miphoneos-version-min=5.0" unless="HXCPP_GCC" />
  <flag value="-fobjc-arc" if="OBJC_ARC" />
  <flag value="-DOBJC_ARC" if="OBJC_ARC" />
  <flag value="-Wno-parentheses" />
  <flag value="-Wno-null-dereference" unless="HXCPP_GCC"/>
  <flag value="-Wno-unused-value" />
  <flag value="-Wno-bool-conversion" unless="HXCPP_GCC"/>
  <!-- Removed for iOS 8 -->
  <!-- <flag value="-fvisibility=hidden"/> -->
  <flag value="-fno-stack-protector"/>
  <flag value="-DIPHONE=IPHONE"/>
  <flag value="-DIPHONEOS=IPHONEOS"/>
  <include name="toolchain/common-defines.xml" />
  <flag value="-DHXCPP_BIG_ENDIAN" if="HXCPP_BIG_ENDIAN"/>
  <flag value="-I${HXCPP}/include"/>
  <!-- Removed for iOS 8 (no need) -->
  <!-- <cppflag value="-frtti"/> -->

  <!-- Added for iOS8 -->
  <flag value="-fexceptions"/>
  <flag value="-fstrict-aliasing"/>
  <!-- End of Added for iOS8 -->

  <outflag value="-o"/>
  <ext value=".o"/>
  <objdir value="obj/iphoneos${OBJGCC}${OBJDBG}${ARCH}/" />
</compiler>

<linker id="dll" exe="g++" >
  <exe name="${CXX}" if="CXX" />
  <exe name="xcrun --sdk iphoneos${IPHONE_VER} g++" if="MAC_GCC" />
  <exe name="xcrun --sdk iphoneos${IPHONE_VER} clang++" if="mac" />
  <flag value="-stdlib=libstdc++" if="FORCE_LIBGCC" />
  <flag value="-stdlib=libc++" if="HXCPP_CPP11" />
  <flag value="-dynamiclib"/>
  <flag value="-arch"/>
  <flag value="armv6" if="HXCPP_ARMV6" />
  <flag value="armv7" if="HXCPP_ARMV7" />
  <flag value="armv7s" if="HXCPP_ARMV7S" />
  <flag value="arm64" if="HXCPP_ARM64" />
  <flag value="-isysroot" if="mac"/>
	<flag value="${SDK_ROOT}" if="mac"/>
  <flag value="-Wl,-undefined,dynamic_lookup"/>
  <flag value="-fpic"/>
  <flag value="-fPIC"/>
  <flag value="-fvisibility=hidden"/>
  <ext value=".ios.dylib"/>
  <outflag value="-o "/>
</linker>

<linker id="exe" exe="g++">
  <exe name="haxelib run cross-ios --sdk iphoneos${IPHONE_VER} run clang++" unless="mac" />
  <exe name="haxelib run cross-ios --sdk iphoneos${IPHONE_VER} run g++" if="HXCPP_GCC" />
  <exe name="xcrun --sdk iphoneos${IPHONE_VER} g++" if="MAC_GCC" />
  <exe name="xcrun --sdk iphoneos${IPHONE_VER} clang++" if="mac" />
  <!-- <exe name="${CXX}" if="CXX" /> -->
  <fromfile value="" if="GCC_OLD" />
  <flag value="-debug" if="debug"/>
  <flag value="-rdynamic"/>
  <flag value="-m32" unless="HXCPP_M64"/>
  <flag value="-m64" if="HXCPP_M64"/>
  <lib name="-ldl"/>
  <ext value=""/>
  <outflag value="-o "/>
</linker>

</xml>
